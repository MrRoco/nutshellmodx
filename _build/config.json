{
    "name": "NutshellModx",
    "lowCaseName": "nutshellmodx",
    "description": "Nutshell integration for MODX FormIt",
    "author": "Joeke Kloosterman",
    "version": "0.1.4",
    "package":{
        "elements": {
            "snippets": [{
                "name": "NutshellModxHook",
                "description": "FormIt hook to save the form data to Nutshell via the Nutshell API.",
                "file": "nutshellmodxhook.snippet.php"
            }],
            "chunks": []
        },
        "systemSettings": [{
            "key": "username",
            "value": "",
            "area": "general"
        },{
            "key": "apikey",
            "value": "",
            "area": "general"
        },{
            "key": "use_existing_contact",
            "type": "combo-boolean",
            "value": "0",
            "area": "general"
        }]
    },
    "dependencies": [{
        "name": "formit",        
        "version": ">=2.2.0"
    }],
    "build": {
        "readme": "docs/readme.txt",
        "license": "docs/license.txt",
        "changelog": "docs/changelog.txt"
    }
}